# Server Configuration
PORT=5001
JWT_SECRET=your_jwt_secret_key_here

# Database Configuration
DB_PATH=./server/database/genconnect.db

# Email Configuration (for sending calendar invites)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Zoom API Configuration (for real Zoom meetings)
# Get these from: https://marketplace.zoom.us/develop/create
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret
ZOOM_ACCOUNT_ID=your-zoom-account-id

# Optional: Use permanent meeting rooms instead of scheduled meetings
# Set to 'true' to create reusable meeting rooms
USE_PERMANENT_MEETINGS=false
